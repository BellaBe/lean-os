{
    "meta": {
        "name": "LoginPage",
        "description": "Login page layouts with various visual styles",
        "category": "layout",
        "figmaId": "1267:132397",
        "figmaFile": "BFATWt2kajie3JJgagoDwr",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Input", "Checkbox", "Link", "Icon"],
        "molecules": ["SocialLoginButtons"],
        "organisms": ["HeaderNavigation"]
    },

    "variants": {
        "type": [
            "simple",
            "simple-social-logins",
            "simple-social-login-leading",
            "simple-minimal",
            "simple-header-navigation",
            "simple-illustration",
            "card-separated",
            "card-combined",
            "split-carousel",
            "split-mockup",
            "split-mockup-quote",
            "split-image",
            "split-quote",
            "split-quote-image-01",
            "split-quote-image-02",
            "split-quote-image-03"
        ],
        "breakpoint": ["desktop", "mobile"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "simple",
            "options": ["simple", "simple-social-logins", "card-separated", "split-image", "split-quote"]
        },
        "logo": {
            "type": "component",
            "description": "Logo component"
        },
        "title": {
            "type": "string",
            "default": "Log in to your account"
        },
        "subtitle": {
            "type": "string",
            "default": "Welcome back! Please enter your details."
        },
        "showSocialLogins": {
            "type": "boolean",
            "default": true
        },
        "showRememberMe": {
            "type": "boolean",
            "default": true
        },
        "showForgotPassword": {
            "type": "boolean",
            "default": true
        },
        "signUpLink": {
            "type": "string",
            "default": "/signup"
        },
        "splitContent": {
            "type": "object",
            "description": "Content for split layouts (image, quote, testimonial)"
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-md" },
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
        },
        "form": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
            "inputGap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "split": {
            "contentWidth": "50%",
            "imageWidth": "50%"
        }
    },

    "tokens": {
        "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
        "splitBackground": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" }
    },

    "textStyles": {
        "title": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "subtitle": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "formFields": {
        "email": {
            "label": "Email",
            "type": "email",
            "placeholder": "Enter your email",
            "required": true
        },
        "password": {
            "label": "Password",
            "type": "password",
            "placeholder": "••••••••",
            "required": true
        }
    },

    "accessibility": {
        "role": "main",
        "ariaLabel": "Login form",
        "notes": [
            "Form should have proper labels",
            "Password field should support show/hide toggle",
            "Error messages should be announced to screen readers"
        ]
    }
}
