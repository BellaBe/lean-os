{
    "meta": {
        "name": "HeroHeaderSection",
        "description": "Full-width hero section with media (mockups, images, cards) for landing pages",
        "category": "organism",
        "figmaId": "1316:3622",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Input", "Badge", "Avatar"],
        "molecules": ["ButtonGroup"]
    },

    "variants": {
        "type": [
            "screen-mockup", "iphone-mockup", "card-mockup",
            "color-card", "split-image", "split-form",
            "simple-text", "geometric-shapes", "abstract-angles"
        ],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "screen-mockup",
            "options": [
                "screen-mockup", "iphone-mockup", "card-mockup",
                "color-card", "split-image", "split-form",
                "simple-text", "geometric-shapes", "abstract-angles"
            ]
        },
        "eyebrow": {
            "type": "string",
            "description": "Badge or category text above heading"
        },
        "heading": {
            "type": "string",
            "required": true,
            "description": "Main hero heading"
        },
        "subheading": {
            "type": "string",
            "description": "Supporting description"
        },
        "primaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "secondaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "mediaSrc": {
            "type": "string",
            "description": "Image or video source for mockup types"
        },
        "mediaAlt": {
            "type": "string",
            "description": "Alt text for media"
        },
        "avatars": {
            "type": "array",
            "description": "Avatar stack for social proof"
        },
        "rating": {
            "type": "object",
            "properties": {
                "value": { "type": "number" },
                "count": { "type": "number" }
            }
        },
        "stats": {
            "type": "array",
            "description": "Key metrics to display"
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
            "paddingX": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-desktop" },
            "paddingXMobile": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-mobile" }
        },
        "content": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-md" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" }
        },
        "section": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-9xl" },
            "paddingYMobile": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-7xl" }
        },
        "media": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
        },
        "splitLayout": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-7xl" }
        }
    },

    "tokens": {
        "default": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" }
        },
        "brand": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-section" }
        },
        "colorCard": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" }
        },
        "mockupShadow": {
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-3xl" }
        }
    },

    "textStyles": {
        "eyebrow": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
        },
        "heading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display xl/Semibold" },
            "typographyMobile": { "isAlias": true, "collection": "Typography Styles", "name": "Display md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "subheading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xl/Regular" },
            "typographyMobile": { "isAlias": true, "collection": "Typography Styles", "name": "Text lg/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "colorCardHeading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display xl/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Stacked layout, media below content",
            "breakpoint": "< 1024px"
        },
        "desktop": {
            "description": "Side-by-side or centered layout based on type",
            "breakpoint": ">= 1024px"
        }
    },

    "accessibility": {
        "notes": [
            "Hero heading should typically be h1",
            "Media mockups should have decorative alt or meaningful description",
            "Ensure sufficient color contrast on color card variants",
            "CTA buttons should have clear action labels"
        ]
    }
}
