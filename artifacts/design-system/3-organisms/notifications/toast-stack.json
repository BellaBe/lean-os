{
    "meta": {
        "name": "ToastStack",
        "description": "Container for managing multiple toast notifications",
        "category": "organism",
        "figmaId": "1156:101789",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "molecules": ["Toast"]
    },

    "variants": {
        "position": ["top-right", "top-left", "top-center", "bottom-right", "bottom-left", "bottom-center"]
    },

    "props": {
        "toasts": {
            "type": "array",
            "required": true,
            "description": "Array of toast objects"
        },
        "position": {
            "type": "enum",
            "default": "top-right",
            "options": ["top-right", "top-left", "top-center", "bottom-right", "bottom-left", "bottom-center"]
        },
        "maxVisible": {
            "type": "number",
            "default": 5
        },
        "onDismiss": {
            "type": "function"
        }
    },

    "sizing": {
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
        "margin": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
        "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-sm" }
    },

    "tokens": {},

    "animation": {
        "stagger": {
            "delay": { "isAlias": true, "collection": "Motion Styles", "name": "duration-instant" }
        }
    },

    "accessibility": {
        "role": "region",
        "ariaAttributes": {
            "aria-label": "Notifications"
        },
        "notes": [
            "New toasts should be announced",
            "Stack should not interfere with page navigation"
        ]
    }
}
