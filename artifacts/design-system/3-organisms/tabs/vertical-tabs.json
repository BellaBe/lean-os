{
    "meta": {
        "name": "VerticalTabs",
        "description": "Vertical tab navigation for side panels and settings",
        "category": "organism",
        "figmaId": "43:2815",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "molecules": ["TabButton"]
    },

    "variants": {
        "style": ["underline", "pill", "button"],
        "size": ["sm", "md"]
    },

    "props": {
        "tabs": {
            "type": "array",
            "required": true,
            "description": "Array of {id, label, icon?, badge?, disabled?}"
        },
        "activeTab": {
            "type": "string",
            "required": true
        },
        "style": {
            "type": "enum",
            "default": "underline",
            "options": ["underline", "pill", "button"]
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "onChange": {
            "type": "function"
        }
    },

    "sizing": {
        "width": { "isAlias": true, "collection": "Width Styles", "name": "width-xxs" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
        "indicatorWidth": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xxs" }
    },

    "tokens": {
        "underline": {
            "indicator": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" }
        },
        "pill": {
            "activeBackground": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-active" }
        }
    },

    "accessibility": {
        "role": "tablist",
        "ariaAttributes": {
            "aria-orientation": "vertical"
        },
        "keyboardInteraction": {
            "ArrowUp": "previous tab",
            "ArrowDown": "next tab",
            "Home": "first tab",
            "End": "last tab"
        }
    }
}
