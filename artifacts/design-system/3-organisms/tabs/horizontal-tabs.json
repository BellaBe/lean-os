{
    "meta": {
        "name": "HorizontalTabs",
        "description": "Horizontal tab navigation with underline, pill, or button styles",
        "category": "organism",
        "figmaId": "43:2614",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "molecules": ["TabButton"]
    },

    "variants": {
        "style": ["underline", "pill", "button"],
        "size": ["sm", "md"],
        "fullWidth": [false, true]
    },

    "props": {
        "tabs": {
            "type": "array",
            "required": true,
            "description": "Array of {id, label, icon?, badge?, disabled?}"
        },
        "activeTab": {
            "type": "string",
            "required": true
        },
        "style": {
            "type": "enum",
            "default": "underline",
            "options": ["underline", "pill", "button"]
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "fullWidth": {
            "type": "boolean",
            "default": false
        },
        "onChange": {
            "type": "function"
        }
    },

    "sizing": {
        "underline": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "indicatorHeight": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xxs" }
        },
        "pill": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
            "containerPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" }
        },
        "button": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" }
        }
    },

    "tokens": {
        "underline": {
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "pill": {
            "containerBackground": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" },
            "containerBorder": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-primary" }
        },
        "button": {
            "background": null
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Horizontal scroll when tabs overflow",
            "breakpoint": "< 768px"
        },
        "desktop": {
            "description": "Full width or auto layout",
            "breakpoint": ">= 768px"
        }
    },

    "accessibility": {
        "role": "tablist",
        "ariaAttributes": {
            "aria-orientation": "horizontal"
        },
        "keyboardInteraction": {
            "ArrowLeft": "previous tab",
            "ArrowRight": "next tab",
            "Home": "first tab",
            "End": "last tab"
        },
        "notes": [
            "Use roving tabindex for tab navigation",
            "Active tab panels should have role=tabpanel"
        ]
    }
}
