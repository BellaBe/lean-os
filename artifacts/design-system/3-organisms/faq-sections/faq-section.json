{
    "meta": {
        "name": "FAQSection",
        "description": "Frequently asked questions section with expandable answers",
        "category": "organism",
        "figmaId": "1295:142789",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon"],
        "molecules": ["Accordion"]
    },

    "variants": {
        "layout": ["single-column", "two-column"],
        "style": ["simple", "bordered", "separated"]
    },

    "props": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "items": {
            "type": "array",
            "required": true,
            "description": "Array of {question, answer, category?}"
        },
        "layout": {
            "type": "enum",
            "default": "single-column",
            "options": ["single-column", "two-column"]
        },
        "style": {
            "type": "enum",
            "default": "simple",
            "options": ["simple", "bordered", "separated"]
        },
        "allowMultiple": {
            "type": "boolean",
            "default": false,
            "description": "Allow multiple items open at once"
        },
        "defaultOpen": {
            "type": "array",
            "description": "Indices of items open by default"
        },
        "supportLink": {
            "type": "object",
            "properties": {
                "text": { "type": "string" },
                "href": { "type": "string" }
            }
        }
    },

    "sizing": {
        "container": {
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-8xl" },
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-4xl" }
        },
        "header": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "marginBottom": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-5xl" }
        },
        "item": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" }
        },
        "twoColumnGap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
    },

    "tokens": {
        "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
        "item": {
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "icon": {
            "default": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" },
            "expanded": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" }
        }
    },

    "textStyles": {
        "sectionTitle": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "sectionDescription": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xl/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "question": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text lg/Medium" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "answer": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "supportText": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "supportLink": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
        }
    },

    "animation": {
        "expand": {
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-normal" },
            "timing": "ease-out"
        }
    },

    "accessibility": {
        "notes": [
            "Use proper accordion ARIA pattern",
            "Questions should be buttons with aria-expanded",
            "Answers should have aria-hidden when collapsed"
        ]
    }
}
