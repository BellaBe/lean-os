{
    "meta": {
        "name": "Modal",
        "description": "Dialog modal with header, content, and footer",
        "category": "organism",
        "figmaId": "1243:133012",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "molecules": ["ModalHeader", "ModalFooter"]
    },

    "variants": {
        "size": ["sm", "md", "lg", "xl", "full"],
        "type": ["default", "destructive", "form", "confirmation"]
    },

    "props": {
        "open": {
            "type": "boolean",
            "required": true
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md", "lg", "xl", "full"]
        },
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "iconVariant": {
            "type": "enum",
            "options": ["default", "success", "warning", "error", "info"]
        },
        "children": {
            "type": "node",
            "description": "Modal content"
        },
        "primaryAction": {
            "type": "object"
        },
        "secondaryAction": {
            "type": "object"
        },
        "closeOnOverlayClick": {
            "type": "boolean",
            "default": true
        },
        "closeOnEscape": {
            "type": "boolean",
            "default": true
        },
        "onClose": {
            "type": "function"
        }
    },

    "sizing": {
        "sm": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-sm" }
        },
        "md": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-md" }
        },
        "lg": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-lg" }
        },
        "xl": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-xl" }
        },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-xl" },
        "contentPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "maxHeight": "90vh"
    },

    "tokens": {
        "overlay": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-overlay" },
        "container": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-xl" }
        }
    },

    "animation": {
        "overlay": {
            "enter": "fade-in",
            "exit": "fade-out",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        },
        "container": {
            "enter": "scale-in",
            "exit": "scale-out",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Full width with bottom sheet on small screens",
            "breakpoint": "< 640px"
        },
        "desktop": {
            "description": "Centered with fixed width",
            "breakpoint": ">= 640px"
        }
    },

    "accessibility": {
        "role": "dialog",
        "ariaAttributes": {
            "aria-modal": "true",
            "aria-labelledby": "modal title id",
            "aria-describedby": "modal description id"
        },
        "keyboardInteraction": {
            "Escape": "close modal",
            "Tab": "trap focus within modal"
        },
        "notes": [
            "Focus should be trapped within modal",
            "Focus should return to trigger on close",
            "Body scroll should be locked when open"
        ]
    }
}
