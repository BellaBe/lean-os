{
    "meta": {
        "name": "CTASection",
        "description": "Call-to-action section for marketing pages with various layouts",
        "category": "organism",
        "figmaId": "1365:198734",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Input", "Icon", "Avatar"]
    },

    "variants": {
        "type": ["simple", "with-image", "split", "newsletter", "app-download"],
        "theme": ["default", "brand", "dark"],
        "alignment": ["center", "left"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "simple",
            "options": ["simple", "with-image", "split", "newsletter", "app-download"]
        },
        "theme": {
            "type": "enum",
            "default": "default",
            "options": ["default", "brand", "dark"]
        },
        "alignment": {
            "type": "enum",
            "default": "center",
            "options": ["center", "left"]
        },
        "eyebrow": {
            "type": "string"
        },
        "heading": {
            "type": "string",
            "required": true
        },
        "subheading": {
            "type": "string"
        },
        "primaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "secondaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "emailCapture": {
            "type": "object",
            "properties": {
                "placeholder": { "type": "string" },
                "buttonLabel": { "type": "string" }
            }
        },
        "mediaSrc": {
            "type": "string"
        },
        "mediaAlt": {
            "type": "string"
        },
        "appStoreLinks": {
            "type": "object",
            "properties": {
                "appStore": { "type": "string" },
                "googlePlay": { "type": "string" }
            }
        },
        "avatars": {
            "type": "array",
            "description": "Social proof avatars"
        },
        "socialProofText": {
            "type": "string"
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
            "paddingX": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-desktop" },
            "paddingXMobile": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-mobile" }
        },
        "section": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-9xl" },
            "paddingYMobile": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-7xl" }
        },
        "content": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-lg" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "actions": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "marginTop": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
        },
        "card": {
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-6xl" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-2xl" }
        }
    },

    "tokens": {
        "default": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" }
        },
        "brand": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" }
        },
        "dark": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary-solid" }
        }
    },

    "textStyles": {
        "eyebrow": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "default": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
            },
            "brand": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
            }
        },
        "heading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display md/Semibold" },
            "typographyMobile": { "isAlias": true, "collection": "Typography Styles", "name": "Display sm/Semibold" },
            "default": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
            },
            "brand": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
            }
        },
        "subheading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xl/Regular" },
            "default": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
            },
            "brand": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-tertiary_alt" }
            }
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Stacked layout, full-width buttons",
            "breakpoint": "< 768px"
        },
        "desktop": {
            "description": "Side-by-side for split types",
            "breakpoint": ">= 768px"
        }
    },

    "accessibility": {
        "notes": [
            "CTA buttons should have clear action labels",
            "Email capture should have proper form labels",
            "Ensure sufficient contrast on brand/dark themes"
        ]
    }
}
