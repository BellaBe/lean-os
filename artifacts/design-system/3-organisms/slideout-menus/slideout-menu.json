{
    "meta": {
        "name": "SlideoutMenu",
        "description": "Side panel that slides in from the edge of the screen",
        "category": "organism",
        "figmaId": "1263:137234",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Icon"],
        "molecules": ["ModalHeader"]
    },

    "variants": {
        "position": ["left", "right"],
        "size": ["sm", "md", "lg", "xl", "full"]
    },

    "props": {
        "open": {
            "type": "boolean",
            "required": true
        },
        "position": {
            "type": "enum",
            "default": "right",
            "options": ["left", "right"]
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md", "lg", "xl", "full"]
        },
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "children": {
            "type": "node"
        },
        "footer": {
            "type": "node"
        },
        "closeOnOverlayClick": {
            "type": "boolean",
            "default": true
        },
        "closeOnEscape": {
            "type": "boolean",
            "default": true
        },
        "onClose": {
            "type": "function"
        }
    },

    "sizing": {
        "sm": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-sm" }
        },
        "md": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-md" }
        },
        "lg": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-lg" }
        },
        "xl": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-xl" }
        },
        "headerPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "contentPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "footerPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" }
    },

    "tokens": {
        "overlay": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-overlay" },
        "container": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-xl" }
        },
        "header": {
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "footer": {
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        }
    },

    "animation": {
        "overlay": {
            "enter": "fade-in",
            "exit": "fade-out",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        },
        "panel": {
            "enter": "slide-in",
            "exit": "slide-out",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-normal" }
        }
    },

    "accessibility": {
        "role": "dialog",
        "ariaAttributes": {
            "aria-modal": "true",
            "aria-labelledby": "slideout title id"
        },
        "keyboardInteraction": {
            "Escape": "close panel",
            "Tab": "trap focus within panel"
        },
        "notes": [
            "Focus should be trapped within panel",
            "Focus should return to trigger on close"
        ]
    }
}
