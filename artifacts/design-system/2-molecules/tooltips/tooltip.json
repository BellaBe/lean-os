{
    "meta": {
        "name": "Tooltip",
        "description": "Contextual information popup on hover or focus",
        "category": "molecule",
        "figmaId": "1275:139234",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon"]
    },

    "variants": {
        "position": ["top", "right", "bottom", "left"],
        "variant": ["dark", "light"],
        "size": ["sm", "md"]
    },

    "props": {
        "content": {
            "type": "string",
            "required": true
        },
        "position": {
            "type": "enum",
            "default": "top",
            "options": ["top", "right", "bottom", "left"]
        },
        "variant": {
            "type": "enum",
            "default": "dark",
            "options": ["dark", "light"]
        },
        "size": {
            "type": "enum",
            "default": "sm",
            "options": ["sm", "md"]
        },
        "showArrow": {
            "type": "boolean",
            "default": true
        },
        "delay": {
            "type": "number",
            "default": 300
        },
        "children": {
            "type": "node",
            "required": true,
            "description": "Trigger element"
        }
    },

    "sizing": {
        "sm": {
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xxs" }
        },
        "md": {
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xs" }
        },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
        "arrowSize": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-sm" }
    },

    "tokens": {
        "dark": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_alt" },
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
        },
        "light": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        }
    },

    "textStyles": {
        "content": {
            "sm": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
            },
            "md": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" }
            }
        }
    },

    "animation": {
        "enter": {
            "type": "fade-in",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        },
        "exit": {
            "type": "fade-out",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        }
    },

    "accessibility": {
        "role": "tooltip",
        "ariaAttributes": {
            "aria-describedby": "tooltip id"
        },
        "notes": [
            "Should be accessible via keyboard focus",
            "Content should not be interactive"
        ]
    }
}
