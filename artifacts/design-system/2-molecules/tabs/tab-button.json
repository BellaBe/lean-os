{
    "meta": {
        "name": "TabButton",
        "description": "Individual tab button for tab navigation",
        "category": "molecule",
        "figmaId": "43:2412",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon", "Badge"]
    },

    "variants": {
        "state": ["default", "hover", "active", "disabled"],
        "size": ["sm", "md"],
        "style": ["underline", "pill", "button"]
    },

    "props": {
        "label": {
            "type": "string",
            "required": true
        },
        "icon": {
            "type": "string"
        },
        "badge": {
            "type": "string",
            "description": "Count or status badge"
        },
        "active": {
            "type": "boolean",
            "default": false
        },
        "disabled": {
            "type": "boolean",
            "default": false
        },
        "onClick": {
            "type": "function"
        }
    },

    "sizing": {
        "sm": {
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "md": {
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" }
        },
        "pill": {
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" }
        }
    },

    "tokens": {
        "underline": {
            "default": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
            },
            "hover": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
            },
            "active": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" },
                "indicator": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" }
            }
        },
        "pill": {
            "default": {
                "background": null,
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
            },
            "active": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-active" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
            }
        }
    },

    "textStyles": {
        "label": {
            "sm": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "md": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" }
        }
    },

    "accessibility": {
        "role": "tab",
        "ariaAttributes": {
            "aria-selected": "active state",
            "aria-controls": "panel id"
        },
        "keyboardInteraction": {
            "Enter": "activate tab",
            "Space": "activate tab"
        }
    }
}
