{
    "meta": {
        "name": "Breadcrumbs",
        "description": "Navigation breadcrumbs showing page hierarchy",
        "category": "molecule",
        "figmaId": "1203:105678",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon"]
    },

    "variants": {
        "size": ["sm", "md"],
        "separator": ["chevron", "slash"]
    },

    "props": {
        "items": {
            "type": "array",
            "required": true,
            "description": "Array of {label, href, icon?}"
        },
        "size": {
            "type": "enum",
            "default": "sm",
            "options": ["sm", "md"]
        },
        "separator": {
            "type": "enum",
            "default": "chevron",
            "options": ["chevron", "slash"]
        },
        "maxItems": {
            "type": "number",
            "description": "Max visible items before collapsing"
        },
        "showHome": {
            "type": "boolean",
            "default": true
        }
    },

    "sizing": {
        "sm": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-xs" }
        },
        "md": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        }
    },

    "tokens": {
        "separator": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" },
        "link": {
            "default": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" },
            "hover": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
        },
        "current": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
    },

    "textStyles": {
        "sm": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
        },
        "md": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" }
        }
    },

    "accessibility": {
        "role": "navigation",
        "ariaAttributes": {
            "aria-label": "Breadcrumb"
        },
        "notes": [
            "Use nav element with aria-label",
            "Current page should have aria-current='page'",
            "Use ol/li for semantic structure"
        ]
    }
}
