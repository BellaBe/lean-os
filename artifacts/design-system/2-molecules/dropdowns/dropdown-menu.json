{
    "meta": {
        "name": "DropdownMenu",
        "description": "Contextual menu with selectable options",
        "category": "molecule",
        "figmaId": "1279:139789",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon", "Checkbox"]
    },

    "variants": {
        "size": ["sm", "md"],
        "position": ["bottom-start", "bottom-end", "top-start", "top-end"]
    },

    "props": {
        "trigger": {
            "type": "node",
            "required": true
        },
        "items": {
            "type": "array",
            "required": true,
            "description": "Array of {id, label, icon?, shortcut?, disabled?, destructive?, divider?}"
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "position": {
            "type": "enum",
            "default": "bottom-start",
            "options": ["bottom-start", "bottom-end", "top-start", "top-end"]
        },
        "multiSelect": {
            "type": "boolean",
            "default": false
        },
        "selectedItems": {
            "type": "array"
        },
        "onSelect": {
            "type": "function"
        }
    },

    "sizing": {
        "sm": {
            "minWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xxs" },
            "itemPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "md": {
            "minWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xs" },
            "itemPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" }
        },
        "containerPadding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" }
    },

    "tokens": {
        "container": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        },
        "item": {
            "default": {
                "background": null,
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" }
            },
            "active": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-active" }
            },
            "disabled": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            },
            "destructive": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-error-primary (600)" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-error-secondary" }
            }
        },
        "divider": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
    },

    "textStyles": {
        "item": {
            "sm": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
            },
            "md": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" }
            },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
        },
        "shortcut": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-quaternary (500)" }
        }
    },

    "animation": {
        "enter": {
            "type": "scale-in",
            "origin": "top",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        },
        "exit": {
            "type": "scale-out",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        }
    },

    "accessibility": {
        "role": "menu",
        "ariaAttributes": {
            "aria-orientation": "vertical"
        },
        "keyboardInteraction": {
            "ArrowDown": "next item",
            "ArrowUp": "previous item",
            "Enter": "select item",
            "Escape": "close menu"
        }
    }
}
