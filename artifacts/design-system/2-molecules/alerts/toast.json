{
    "meta": {
        "name": "Toast",
        "description": "Toast notification for ephemeral feedback",
        "category": "molecule",
        "figmaId": "1156:101567",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon", "Button"]
    },

    "variants": {
        "variant": ["default", "success", "warning", "error"],
        "withAction": [false, true],
        "withProgress": [false, true]
    },

    "props": {
        "variant": {
            "type": "enum",
            "default": "default",
            "options": ["default", "success", "warning", "error"]
        },
        "title": {
            "type": "string"
        },
        "message": {
            "type": "string",
            "required": true
        },
        "icon": {
            "type": "string"
        },
        "action": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "duration": {
            "type": "number",
            "default": 5000,
            "description": "Auto-dismiss duration in ms, 0 for persistent"
        },
        "showProgress": {
            "type": "boolean",
            "default": false
        },
        "onDismiss": {
            "type": "function"
        }
    },

    "sizing": {
        "minWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xs" },
        "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-sm" },
        "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
        "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
    },

    "tokens": {
        "container": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        },
        "icon": {
            "default": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-secondary (700)" },
            "success": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-success-secondary" },
            "warning": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-warning-secondary" },
            "error": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-error-secondary" }
        },
        "progress": {
            "track": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" },
            "fill": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" }
        }
    },

    "textStyles": {
        "title": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "message": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "animation": {
        "enter": {
            "type": "slide-in",
            "direction": "right",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        },
        "exit": {
            "type": "slide-out",
            "direction": "right",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        }
    },

    "accessibility": {
        "role": "status",
        "ariaAttributes": {
            "aria-live": "polite",
            "aria-atomic": "true"
        },
        "notes": [
            "Error toasts should use aria-live='assertive'",
            "Dismissible toasts should be keyboard accessible"
        ]
    }
}
