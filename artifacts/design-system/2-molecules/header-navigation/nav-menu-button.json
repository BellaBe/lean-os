{
    "meta": {
        "name": "NavMenuButton",
        "description": "Toggle button for mobile navigation menu (hamburger/close icon)",
        "category": "molecule",
        "figmaId": "1288:20",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "variants": {
        "opened": [false, true],
        "state": ["default", "hover", "focused"]
    },

    "props": {
        "opened": {
            "type": "boolean",
            "default": false,
            "description": "Whether the menu is open (controls icon display)"
        },
        "onClick": {
            "type": "function",
            "description": "Handler for toggle action"
        },
        "ariaLabel": {
            "type": "string",
            "default": "Toggle navigation menu"
        }
    },

    "sizing": {
        "default": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Button/height-md" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" },
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
        }
    },

    "tokens": {
        "default": {
            "background": null,
            "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-secondary (700)" }
        },
        "hover": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" },
            "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-secondary_hover" }
        },
        "focused": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
        }
    },

    "icons": {
        "closed": "menu-01",
        "opened": "x-close"
    },

    "accessibility": {
        "role": "button",
        "focusable": true,
        "keyboardInteraction": {
            "Enter": "toggle menu",
            "Space": "toggle menu",
            "Escape": "close menu if open"
        },
        "ariaAttributes": {
            "aria-expanded": "current opened state",
            "aria-label": "Toggle navigation menu",
            "aria-controls": "mobile-menu"
        }
    }
}
