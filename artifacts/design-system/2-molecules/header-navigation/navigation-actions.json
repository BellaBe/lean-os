{
    "meta": {
        "name": "NavigationActions",
        "description": "Authentication and user actions in navigation header",
        "category": "molecule",
        "figmaId": "1624:264720",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Avatar"],
        "molecules": []
    },

    "variants": {
        "loggedIn": [false, true],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "loggedIn": {
            "type": "boolean",
            "default": false
        },
        "user": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "email": { "type": "string" },
                "avatar": { "type": "string" }
            }
        },
        "onSignUp": {
            "type": "function"
        },
        "onLogIn": {
            "type": "function"
        },
        "onLogOut": {
            "type": "function"
        }
    },

    "sizing": {
        "desktop": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
        },
        "mobile": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "buttonWidth": { "value": "100%" }
        },
        "buttonPadding": {
            "x": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "y": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" }
        }
    },

    "tokens": {
        "primaryButton": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" },
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
        },
        "secondaryButton": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-primary" },
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
        },
        "tertiaryButton": {
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "textStyles": {
        "button": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" }
        },
        "userName": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "userEmail": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "notes": [
            "Buttons should have clear labels",
            "Avatar dropdown must be keyboard navigable",
            "Mobile logout button needs aria-label"
        ]
    }
}
