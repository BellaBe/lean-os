{
    "meta": {
        "name": "NavMenuItemCard",
        "description": "Card-style navigation menu item with media (image, video, or feature illustration)",
        "category": "molecule",
        "figmaId": "1282:58",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Badge", "Icon"],
        "molecules": []
    },

    "variants": {
        "type": ["feature-card", "video-card", "image-card"],
        "stacked": ["vertical", "horizontal"],
        "state": ["default", "hover", "focused"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "feature-card",
            "options": ["feature-card", "video-card", "image-card"]
        },
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "string",
            "required": true
        },
        "mediaSrc": {
            "type": "string",
            "required": true
        },
        "mediaAlt": {
            "type": "string"
        },
        "badgeText": {
            "type": "string",
            "description": "For feature-card type"
        },
        "videoUrl": {
            "type": "string",
            "description": "For video-card type"
        },
        "href": {
            "type": "string",
            "required": true
        },
        "primaryAction": {
            "type": "string",
            "default": "Learn more"
        },
        "secondaryAction": {
            "type": "string"
        },
        "onClick": {
            "type": "function"
        }
    },

    "sizing": {
        "desktop": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-xxs" }
        },
        "mobile": {
            "width": "full"
        },
        "media": {
            "height": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-11xl" }
        },
        "playButton": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-lg" }
        },
        "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
        "gap": {
            "content": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "text": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
            "actions": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
        },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-xl" },
        "mediaBorderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
    },

    "tokens": {
        "default": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "hover": {
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        },
        "focused": {
            "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring-brand" }
        },
        "glassmorphism": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Component colors/Alpha/alpha-white-40" },
            "backdropBlur": { "isAlias": true, "collection": "Effect Styles", "name": "Backdrop blurs/backdrop-blur-md" }
        },
        "playButton": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-md" }
        }
    },

    "textStyles": {
        "title": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "description": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "role": "menuitem",
        "keyboardInteraction": {
            "Enter": "navigate to link or play video",
            "Space": "navigate to link or play video"
        },
        "notes": [
            "Card should be fully clickable",
            "Play button should be keyboard accessible for video cards",
            "Media should have descriptive alt text"
        ]
    }
}
