{
    "meta": {
        "name": "NavMenuItem",
        "description": "Navigation menu item with icon, text, description, badge, and action link",
        "category": "molecule",
        "figmaId": "1280:1541",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Badge", "Icon"],
        "molecules": []
    },

    "variants": {
        "iconStyle": ["featured", "small", "none"],
        "state": ["default", "hover"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "title": {
            "type": "string",
            "required": true,
            "description": "Menu item title"
        },
        "description": {
            "type": "string",
            "required": true,
            "description": "Menu item description"
        },
        "icon": {
            "type": "string",
            "description": "Icon name"
        },
        "iconStyle": {
            "type": "enum",
            "default": "featured",
            "options": ["featured", "small", "none"]
        },
        "badge": {
            "type": "string",
            "description": "Optional badge text"
        },
        "href": {
            "type": "string",
            "required": true
        },
        "actionLabel": {
            "type": "string",
            "default": "Learn more"
        },
        "onClick": {
            "type": "function"
        }
    },

    "sizing": {
        "desktop": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-xxs" },
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
        },
        "mobile": {
            "width": "full",
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "featuredIcon": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-lg" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-full" }
        },
        "smallIcon": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" }
        },
        "gap": {
            "iconContent": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "titleDescription": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
            "contentActions": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "titleBadge": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" }
        }
    },

    "tokens": {
        "default": {
            "background": null
        },
        "hover": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
        },
        "featuredIcon": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-primary" }
        }
    },

    "textStyles": {
        "title": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "description": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "role": "menuitem",
        "keyboardInteraction": {
            "Enter": "navigate to link",
            "Space": "navigate to link"
        },
        "notes": "Entire item should be clickable"
    }
}
