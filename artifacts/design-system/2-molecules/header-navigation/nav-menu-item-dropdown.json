{
    "meta": {
        "name": "NavMenuItemDropdown",
        "description": "Expandable navigation menu item with chevron indicator",
        "category": "molecule",
        "figmaId": "1288:10109",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon"],
        "molecules": []
    },

    "variants": {
        "open": [false, true],
        "iconStyle": ["featured", "small", "none"],
        "state": ["default", "hover"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "label": {
            "type": "string",
            "required": true,
            "description": "Menu item label"
        },
        "icon": {
            "type": "string",
            "description": "Icon name"
        },
        "iconStyle": {
            "type": "enum",
            "default": "none",
            "options": ["featured", "small", "none"]
        },
        "open": {
            "type": "boolean",
            "default": false
        },
        "onToggle": {
            "type": "function",
            "description": "Handler for expand/collapse"
        }
    },

    "sizing": {
        "desktop": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-xxs" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "paddingLeft": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "paddingRight": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
        },
        "mobile": {
            "width": "full",
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "featuredIcon": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-lg" }
        },
        "smallIcon": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" }
        },
        "chevron": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
    },

    "tokens": {
        "default": {
            "background": null
        },
        "hover": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
        },
        "chevron": {
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
        }
    },

    "textStyles": {
        "label": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        }
    },

    "icons": {
        "closed": "chevron-down",
        "opened": "chevron-up"
    },

    "accessibility": {
        "role": "button",
        "ariaAttributes": {
            "aria-expanded": "open state",
            "aria-controls": "dropdown panel id"
        },
        "keyboardInteraction": {
            "Enter": "toggle dropdown",
            "Space": "toggle dropdown",
            "ArrowDown": "open and focus first item",
            "ArrowUp": "open and focus last item",
            "Escape": "close dropdown"
        }
    }
}
