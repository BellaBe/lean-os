{
    "meta": {
        "name": "Detail Pages",
        "description": "Single item detail page composition patterns",
        "category": "page",
        "figmaId": "6277:315325",
        "figmaFile": "BFATWt2kajie3JJgagoDwr",
        "version": "2.0.0"
    },

    "breakpoints": ["desktop", "tablet", "mobile"],

    "patterns": {
        "detail-01": {
            "name": "Standard Detail",
            "description": "Single item view with tabbed content",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "standard" },
                { "component": "AppHeaderNavigation", "variant": "with-breadcrumbs" },
                { "component": "PageHeader", "variant": "detail-header", "actions": ["edit", "delete", "more"] },
                { "component": "TabNavigation", "variant": "horizontal" },
                { "component": "DetailContent", "variant": "tabbed-sections" }
            ]
        },
        "detail-profile": {
            "name": "User Profile",
            "description": "User or contact profile view",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "standard" },
                { "component": "AppHeaderNavigation", "variant": "with-breadcrumbs" },
                { "component": "ProfileHeader", "variant": "cover-photo" },
                { "component": "ProfileStats", "variant": "horizontal-bar" },
                { "component": "TabNavigation", "variant": "horizontal" },
                { "component": "ProfileContent", "variant": "activity-feed" }
            ]
        },
        "detail-split": {
            "name": "Split Detail",
            "description": "Main content with sidebar info",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "standard" },
                { "component": "AppHeaderNavigation", "variant": "with-breadcrumbs" },
                { "component": "PageHeader", "variant": "detail-header" },
                { "component": "SplitContent", "variant": "main-sidebar", "sidebarWidth": "320px" },
                { "component": "MainContent", "variant": "description-attachments" },
                { "component": "SidebarContent", "variant": "metadata-panel" }
            ]
        },
        "detail-form": {
            "name": "Edit Form",
            "description": "Detail page in edit mode",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "standard" },
                { "component": "AppHeaderNavigation", "variant": "minimal" },
                { "component": "PageHeader", "variant": "edit-mode", "actions": ["cancel", "save"] },
                { "component": "FormContent", "variant": "sectioned" },
                { "component": "FormActions", "variant": "sticky-footer" }
            ]
        },
        "detail-document": {
            "name": "Document Viewer",
            "description": "Document or file preview",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "collapsed" },
                { "component": "DocumentToolbar", "variant": "with-actions" },
                { "component": "DocumentViewer", "variant": "pdf-preview" },
                { "component": "DocumentSidebar", "variant": "metadata-comments" }
            ]
        }
    },

    "layout": {
        "contentMaxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-5xl" },
        "sidebarWidth": "320px",
        "sectionSpacing": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" }
    },

    "detailTabs": [
        { "id": "overview", "label": "Overview" },
        { "id": "activity", "label": "Activity" },
        { "id": "files", "label": "Files" },
        { "id": "comments", "label": "Comments" },
        { "id": "history", "label": "History" },
        { "id": "settings", "label": "Settings" }
    ],

    "usage": {
        "purpose": "View and edit individual records",
        "navigation": ["breadcrumbs", "back-button", "next/prev"],
        "actions": ["edit", "delete", "duplicate", "archive", "share"]
    }
}
