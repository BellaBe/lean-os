{
    "meta": {
        "name": "TableHeaderCell",
        "description": "Table header cell with sorting and filtering capabilities",
        "category": "molecule",
        "figmaId": "1221:107933",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon", "Checkbox"]
    },

    "variants": {
        "sortable": [false, true],
        "sortDirection": ["none", "asc", "desc"],
        "type": ["text", "checkbox"],
        "alignment": ["left", "center", "right"]
    },

    "props": {
        "label": {
            "type": "string",
            "required": true
        },
        "sortable": {
            "type": "boolean",
            "default": false
        },
        "sortDirection": {
            "type": "enum",
            "default": "none",
            "options": ["none", "asc", "desc"]
        },
        "type": {
            "type": "enum",
            "default": "text",
            "options": ["text", "checkbox"]
        },
        "alignment": {
            "type": "enum",
            "default": "left",
            "options": ["left", "center", "right"]
        },
        "onSort": {
            "type": "function"
        },
        "checked": {
            "type": "boolean",
            "description": "For select-all checkbox"
        },
        "indeterminate": {
            "type": "boolean"
        }
    },

    "sizing": {
        "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
        "sortIconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
    },

    "tokens": {
        "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" },
        "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
        "sortIcon": {
            "inactive": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" },
            "active": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-secondary (700)" }
        }
    },

    "textStyles": {
        "label": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "role": "columnheader",
        "ariaAttributes": {
            "aria-sort": "sort direction when sortable"
        },
        "keyboardInteraction": {
            "Enter": "toggle sort",
            "Space": "toggle sort"
        }
    }
}
