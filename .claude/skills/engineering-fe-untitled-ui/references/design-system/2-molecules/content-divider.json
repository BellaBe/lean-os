{
    "meta": {
        "name": "ContentDivider",
        "description": "Visual separator with centered content for dividing page sections",
        "category": "molecule",
        "figmaId": "1252:126874",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Divider"],
        "molecules": []
    },

    "variants": {
        "type": ["text", "heading", "button", "button-icon", "button-group", "button-group-icon"],
        "style": ["single-line", "dual-line", "background-fill"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "text",
            "options": ["text", "heading", "button", "button-icon", "button-group", "button-group-icon"]
        },
        "style": {
            "type": "enum",
            "default": "single-line",
            "options": ["single-line", "dual-line", "background-fill"]
        },
        "label": {
            "type": "string",
            "description": "Text content for text/heading types"
        },
        "buttonText": {
            "type": "string",
            "description": "Button label for button type"
        },
        "onClick": {
            "type": "function",
            "description": "Click handler for button types"
        }
    },

    "sizing": {
        "singleLine": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "lineHeight": { "value": 1, "unit": "px" }
        },
        "dualLine": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "borderWidth": { "value": 1, "unit": "px" }
        },
        "backgroundFill": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
        }
    },

    "tokens": {
        "line": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "backgroundFill": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
        }
    },

    "textStyles": {
        "text": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "heading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text lg/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        }
    },

    "accessibility": {
        "role": "separator",
        "ariaAttributes": {
            "aria-orientation": "horizontal"
        },
        "notes": [
            "Use role='separator' for decorative dividers",
            "Content dividers with interactive elements should have proper focus management"
        ]
    }
}
