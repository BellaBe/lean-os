{
    "meta": {
        "name": "ProgressSteps",
        "description": "Multi-step progress indicator for wizards and flows",
        "category": "molecule",
        "figmaId": "1211:106789",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon"]
    },

    "variants": {
        "orientation": ["horizontal", "vertical"],
        "size": ["sm", "md"],
        "style": ["numbered", "icon", "dot"]
    },

    "props": {
        "steps": {
            "type": "array",
            "required": true,
            "description": "Array of {label, description?, icon?}"
        },
        "currentStep": {
            "type": "number",
            "required": true
        },
        "orientation": {
            "type": "enum",
            "default": "horizontal",
            "options": ["horizontal", "vertical"]
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "style": {
            "type": "enum",
            "default": "numbered",
            "options": ["numbered", "icon", "dot"]
        },
        "clickable": {
            "type": "boolean",
            "default": false
        },
        "onStepClick": {
            "type": "function"
        }
    },

    "sizing": {
        "sm": {
            "indicatorSize": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
            "connectorHeight": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xxs" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
        },
        "md": {
            "indicatorSize": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" },
            "connectorHeight": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xxs" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "dot": {
            "indicatorSize": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" }
        }
    },

    "tokens": {
        "indicator": {
            "pending": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
            },
            "active": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
            },
            "completed": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-white" }
            }
        },
        "connector": {
            "pending": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "completed": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" }
        }
    },

    "textStyles": {
        "label": {
            "sm": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
            },
            "md": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" }
            },
            "pending": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" },
            "active": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" },
            "completed": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
        },
        "description": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "role": "list",
        "ariaAttributes": {
            "aria-label": "Progress steps"
        },
        "notes": [
            "Current step should have aria-current='step'",
            "Completed steps should indicate completion"
        ]
    }
}
