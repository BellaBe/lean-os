{
    "meta": {
        "name": "ModalFooter",
        "description": "Modal footer with action buttons",
        "category": "molecule",
        "figmaId": "1243:132901",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button"],
        "molecules": ["ButtonGroup"]
    },

    "variants": {
        "alignment": ["left", "right", "center", "full-width"],
        "stacked": [false, true]
    },

    "props": {
        "primaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "variant": { "type": "string" },
                "onClick": { "type": "function" },
                "loading": { "type": "boolean" },
                "disabled": { "type": "boolean" }
            }
        },
        "secondaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "tertiaryAction": {
            "type": "object",
            "description": "Left-aligned tertiary action"
        },
        "alignment": {
            "type": "enum",
            "default": "right",
            "options": ["left", "right", "center", "full-width"]
        },
        "stacked": {
            "type": "boolean",
            "default": false,
            "description": "Stack buttons vertically (mobile)"
        }
    },

    "sizing": {
        "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
    },

    "tokens": {
        "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
        "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" }
    },

    "accessibility": {
        "notes": [
            "Primary action should be focusable by default",
            "Destructive actions should have confirmation"
        ]
    }
}
