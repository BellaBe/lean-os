{
    "meta": {
        "name": "ModalHeader",
        "description": "Modal header with title, description, and close button",
        "category": "molecule",
        "figmaId": "1243:132845",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon", "Button"]
    },

    "variants": {
        "type": ["simple", "with-description", "with-icon"],
        "alignment": ["left", "center"]
    },

    "props": {
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "iconVariant": {
            "type": "enum",
            "options": ["default", "success", "warning", "error", "info"]
        },
        "showCloseButton": {
            "type": "boolean",
            "default": true
        },
        "alignment": {
            "type": "enum",
            "default": "left",
            "options": ["left", "center"]
        },
        "onClose": {
            "type": "function"
        }
    },

    "sizing": {
        "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
        "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-lg" },
        "closeButtonSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" }
    },

    "tokens": {
        "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
        "iconBackground": {
            "default": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" },
            "success": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-success-secondary" },
            "warning": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-warning-secondary" },
            "error": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-error-secondary" },
            "info": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-secondary" }
        },
        "iconColor": {
            "default": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-secondary (700)" },
            "success": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-success-secondary" },
            "warning": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-warning-secondary" },
            "error": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-error-secondary" },
            "info": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" }
        }
    },

    "textStyles": {
        "title": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text lg/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "description": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "notes": [
            "Title should be linked to modal via aria-labelledby",
            "Close button should have aria-label='Close'"
        ]
    }
}
