{
    "meta": {
        "name": "FooterLink",
        "description": "Individual footer navigation link with optional badge",
        "category": "molecule",
        "figmaId": "3288:570928",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Link", "Badge"]
    },

    "variants": {
        "badge": [false, true],
        "state": ["default", "hover"]
    },

    "props": {
        "label": {
            "type": "string",
            "required": true
        },
        "href": {
            "type": "string",
            "required": true
        },
        "badge": {
            "type": "string",
            "description": "Optional badge text (e.g., 'New')"
        },
        "external": {
            "type": "boolean",
            "default": false
        }
    },

    "sizing": {
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
        "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" }
    },

    "tokens": {
        "default": {
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "hover": {
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        }
    },

    "textStyles": {
        "link": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Medium" }
        }
    },

    "accessibility": {
        "notes": [
            "External links should indicate they open in new tab",
            "Links should have visible focus state"
        ]
    }
}
