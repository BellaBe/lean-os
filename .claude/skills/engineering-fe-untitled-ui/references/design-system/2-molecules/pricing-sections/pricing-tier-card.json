{
    "meta": {
        "name": "PricingTierCard",
        "description": "Pricing tier card with features list, price, and CTA",
        "category": "molecule",
        "figmaId": "1346:182709",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Icon", "Badge"]
    },

    "variants": {
        "highlighted": [false, true],
        "theme": ["default", "brand"],
        "size": ["sm", "md", "lg"]
    },

    "props": {
        "name": {
            "type": "string",
            "required": true,
            "description": "Tier name (e.g., 'Basic', 'Pro')"
        },
        "description": {
            "type": "string",
            "description": "Short tier description"
        },
        "price": {
            "type": "object",
            "properties": {
                "amount": { "type": "number" },
                "currency": { "type": "string" },
                "period": { "type": "string" }
            }
        },
        "features": {
            "type": "array",
            "required": true,
            "description": "Array of feature strings or {text, included}"
        },
        "highlighted": {
            "type": "boolean",
            "default": false,
            "description": "Highlight as recommended tier"
        },
        "badge": {
            "type": "string",
            "description": "Badge text (e.g., 'Most Popular')"
        },
        "ctaLabel": {
            "type": "string",
            "default": "Get started"
        },
        "onCtaClick": {
            "type": "function"
        }
    },

    "sizing": {
        "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" },
        "paddingMobile": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" },
        "featureGap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-2xl" },
        "checkIconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" }
    },

    "tokens": {
        "default": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "highlighted": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-xl" }
        },
        "featureCheck": {
            "included": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" },
            "excluded": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-disabled" }
        }
    },

    "textStyles": {
        "tierName": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xl/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
        },
        "description": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "price": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display lg/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "period": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Medium" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "feature": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "included": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" },
            "excluded": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
        }
    },

    "accessibility": {
        "notes": [
            "Price should be announced clearly by screen readers",
            "Feature list should use proper list markup",
            "Highlighted tier should be announced"
        ]
    }
}
