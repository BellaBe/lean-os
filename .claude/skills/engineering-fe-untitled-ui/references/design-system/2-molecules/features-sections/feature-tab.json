{
    "meta": {
        "name": "FeatureTab",
        "description": "Interactive feature tab with icon and label for tabbed feature displays",
        "category": "molecule",
        "figmaId": "3285:387130",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon"]
    },

    "variants": {
        "state": ["default", "hover", "active"],
        "orientation": ["horizontal", "vertical"]
    },

    "props": {
        "icon": {
            "type": "string",
            "description": "Icon name"
        },
        "label": {
            "type": "string",
            "required": true
        },
        "active": {
            "type": "boolean",
            "default": false
        },
        "onClick": {
            "type": "function"
        }
    },

    "sizing": {
        "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
        "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
        "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
    },

    "tokens": {
        "default": {
            "background": null,
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
        },
        "hover": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
        },
        "active": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" },
            "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" }
        }
    },

    "textStyles": {
        "label": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "default": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
            },
            "active": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
            }
        }
    },

    "accessibility": {
        "role": "tab",
        "ariaAttributes": {
            "aria-selected": "active state",
            "aria-controls": "panel id"
        },
        "keyboardInteraction": {
            "Enter": "activate tab",
            "Space": "activate tab",
            "ArrowLeft": "previous tab",
            "ArrowRight": "next tab"
        }
    }
}
