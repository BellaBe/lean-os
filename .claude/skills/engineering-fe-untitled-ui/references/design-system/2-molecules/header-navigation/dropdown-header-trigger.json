{
    "meta": {
        "name": "DropdownHeaderTrigger",
        "description": "Header navigation dropdown trigger with expandable menu panel",
        "category": "molecule",
        "figmaId": "1288:189",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Icon"],
        "molecules": ["NavMenuItem"]
    },

    "variants": {
        "open": [false, true],
        "type": ["simple-2col", "simple-2col-footer", "simple-3col", "full-width"]
    },

    "props": {
        "label": {
            "type": "string",
            "required": true,
            "description": "Trigger button text"
        },
        "open": {
            "type": "boolean",
            "default": false
        },
        "type": {
            "type": "enum",
            "default": "simple-2col",
            "options": ["simple-2col", "simple-2col-footer", "simple-3col", "full-width"]
        },
        "items": {
            "type": "array",
            "description": "Menu items to display"
        },
        "footerTitle": {
            "type": "string"
        },
        "footerDescription": {
            "type": "string"
        },
        "footerPrimaryAction": {
            "type": "string"
        },
        "footerSecondaryAction": {
            "type": "string"
        },
        "onToggle": {
            "type": "function"
        }
    },

    "sizing": {
        "trigger": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" }
        },
        "chevron": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "panel": {
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-2xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-2xl" },
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-2xl" }
        },
        "footer": {
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-2xl" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "columnGap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
    },

    "tokens": {
        "trigger": {
            "default": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
            },
            "hover": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
            }
        },
        "chevron": {
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
        },
        "panel": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        },
        "footer": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        }
    },

    "textStyles": {
        "trigger": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" }
        },
        "footerTitle": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "footerDescription": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "icons": {
        "closed": "chevron-down",
        "opened": "chevron-up"
    },

    "accessibility": {
        "role": "navigation",
        "ariaAttributes": {
            "aria-expanded": "open state",
            "aria-haspopup": "menu"
        },
        "keyboardInteraction": {
            "Enter": "toggle dropdown",
            "Space": "toggle dropdown",
            "Escape": "close dropdown",
            "ArrowDown": "move to next item",
            "ArrowUp": "move to previous item",
            "Tab": "move through focusable elements"
        },
        "notes": [
            "Panel should trap focus when open",
            "Clicking outside should close panel"
        ]
    }
}
