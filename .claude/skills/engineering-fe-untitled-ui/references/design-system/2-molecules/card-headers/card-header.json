{
    "meta": {
        "name": "CardHeader",
        "description": "Header section for cards with title, subtitle, and actions",
        "category": "molecule",
        "figmaId": "1267:138012",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Icon", "Button", "Avatar", "Badge"]
    },

    "variants": {
        "type": ["simple", "with-avatar", "with-icon", "with-actions"],
        "size": ["sm", "md"]
    },

    "props": {
        "title": {
            "type": "string",
            "required": true
        },
        "subtitle": {
            "type": "string"
        },
        "icon": {
            "type": "string"
        },
        "avatar": {
            "type": "object",
            "properties": {
                "src": { "type": "string" },
                "name": { "type": "string" }
            }
        },
        "badge": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "variant": { "type": "string" }
            }
        },
        "actions": {
            "type": "array",
            "description": "Action buttons or menu"
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "divider": {
            "type": "boolean",
            "default": true
        }
    },

    "sizing": {
        "sm": {
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" },
            "avatarSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-sm" }
        },
        "md": {
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-lg" },
            "avatarSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-md" }
        }
    },

    "tokens": {
        "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
        "iconBackground": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" },
        "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
    },

    "textStyles": {
        "title": {
            "sm": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" }
            },
            "md": {
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text lg/Semibold" }
            },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "subtitle": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "notes": [
            "Title should use appropriate heading level",
            "Actions should have accessible labels"
        ]
    }
}
