{
    "meta": {
        "name": "Progress",
        "description": "Linear and circular progress indicators with optional label display",
        "category": "atom",
        "figmaId": "1085:57382",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "variants": {
        "type": ["bar", "circle", "half-circle"],
        "size": ["xxs", "xs", "sm", "md", "lg"],
        "label": ["none", "right", "bottom", "floating-top", "floating-bottom", "center"]
    },

    "props": {
        "value": {
            "type": "number",
            "required": true,
            "description": "Progress value (0-100)"
        },
        "type": {
            "type": "enum",
            "default": "bar",
            "options": ["bar", "circle", "half-circle"]
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["xxs", "xs", "sm", "md", "lg"]
        },
        "label": {
            "type": "enum",
            "default": "none",
            "options": ["none", "right", "bottom", "floating-top", "floating-bottom", "center"]
        },
        "labelText": {
            "type": "string",
            "description": "Custom label text (defaults to percentage)"
        }
    },

    "sizing": {
        "bar": {
            "height": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-full" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" }
        },
        "circle": {
            "xxs": {
                "diameter": { "value": 64, "unit": "px" },
                "strokeWidth": { "value": 6, "unit": "px" },
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
                "labelTypography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
            },
            "xs": {
                "diameter": { "value": 160, "unit": "px" },
                "strokeWidth": { "value": 16, "unit": "px" },
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display xs/Semibold" },
                "labelTypography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
            },
            "sm": {
                "diameter": { "value": 200, "unit": "px" },
                "strokeWidth": { "value": 20, "unit": "px" },
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display sm/Semibold" },
                "labelTypography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
            },
            "md": {
                "diameter": { "value": 240, "unit": "px" },
                "strokeWidth": { "value": 24, "unit": "px" },
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display md/Semibold" },
                "labelTypography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" }
            },
            "lg": {
                "diameter": { "value": 280, "unit": "px" },
                "strokeWidth": { "value": 28, "unit": "px" },
                "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display lg/Semibold" },
                "labelTypography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" }
            }
        },
        "floatingLabel": {
            "padding": { "value": "4px 8px" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
            "arrowSize": { "value": 6, "unit": "px" }
        }
    },

    "tokens": {
        "track": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-quaternary" }
        },
        "fill": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" }
        },
        "floatingLabel": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-sm" }
        }
    },

    "textStyles": {
        "label": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
        },
        "floatingLabel": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
        },
        "circleNumber": {
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "circleLabel": {
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "role": "progressbar",
        "ariaAttributes": {
            "aria-valuenow": "current value",
            "aria-valuemin": "0",
            "aria-valuemax": "100"
        }
    }
}
