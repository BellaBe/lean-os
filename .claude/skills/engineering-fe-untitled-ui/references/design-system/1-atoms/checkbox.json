{
    "meta": {
        "name": "Checkbox",
        "description": "Checkbox or radio input with optional label and supporting text",
        "category": "atom",
        "figmaId": "1097:63652",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "variants": {
        "size": ["sm", "md"],
        "type": ["checkbox", "radio"],
        "checked": [false, true],
        "indeterminate": [false, true],
        "state": ["default", "hover", "focused", "disabled"],
        "showText": [false, true]
    },

    "props": {
        "checked": {
            "type": "boolean",
            "default": false,
            "description": "Whether checkbox is checked"
        },
        "indeterminate": {
            "type": "boolean",
            "default": false,
            "description": "Partial selection state (checkbox only)"
        },
        "type": {
            "type": "enum",
            "default": "checkbox",
            "options": ["checkbox", "radio"]
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "label": {
            "type": "string",
            "description": "Label text"
        },
        "supportingText": {
            "type": "string",
            "description": "Supporting description text"
        },
        "disabled": {
            "type": "boolean",
            "default": false
        },
        "onChange": {
            "type": "function",
            "description": "Callback when checked state changes"
        }
    },

    "sizing": {
        "sm": {
            "inputSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-xs" },
            "iconSize": { "value": 12, "unit": "px" },
            "radioDot": { "value": 6, "unit": "px" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadiusCheckbox": { "isAlias": true, "collection": "Radius Styles", "name": "radius-xs" },
            "borderRadiusRadio": { "isAlias": true, "collection": "Radius Styles", "name": "radius-full" }
        },
        "md": {
            "inputSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" },
            "iconSize": { "value": 14, "unit": "px" },
            "radioDot": { "value": 8, "unit": "px" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "borderRadiusCheckbox": { "isAlias": true, "collection": "Radius Styles", "name": "radius-sm" },
            "borderRadiusRadio": { "isAlias": true, "collection": "Radius Styles", "name": "radius-full" }
        }
    },

    "tokens": {
        "unchecked": {
            "default": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-primary" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-primary" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" }
            },
            "focused": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" },
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "disabled": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-disabled" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-disabled_subtle" }
            }
        },
        "checked": {
            "default": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-white" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid_hover" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid_hover" }
            },
            "focused": {
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "disabled": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-disabled" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-disabled_subtle" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-disabled" }
            }
        }
    },

    "textStyles": {
        "label": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Medium" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
        },
        "supportingText": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "accessibility": {
        "role": "checkbox | radio",
        "focusable": true,
        "keyboardInteraction": {
            "Space": "toggle (checkbox/radio)",
            "ArrowDown": "next option (radio group)",
            "ArrowUp": "previous option (radio group)"
        },
        "ariaAttributes": {
            "aria-checked": "current checked state",
            "aria-disabled": "when disabled"
        }
    }
}
