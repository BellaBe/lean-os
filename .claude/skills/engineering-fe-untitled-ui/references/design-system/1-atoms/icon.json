{
    "meta": {
        "name": "Icon",
        "description": "SVG icon wrapper with consistent sizing and color inheritance",
        "category": "atom",
        "figmaId": "19:1024",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "variants": {
        "size": ["xs", "sm", "md", "lg", "xl", "2xl"]
    },

    "props": {
        "name": {
            "type": "string",
            "required": true,
            "description": "Icon name from icon library (e.g., 'arrow-right', 'check')"
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["xs", "sm", "md", "lg", "xl", "2xl"]
        },
        "color": {
            "type": "string",
            "description": "Color override (inherits from parent by default)"
        },
        "strokeWidth": {
            "type": "number",
            "description": "Stroke width override"
        },
        "ariaLabel": {
            "type": "string",
            "description": "Accessible label for decorative icons"
        },
        "ariaHidden": {
            "type": "boolean",
            "default": true,
            "description": "Hide from screen readers when decorative"
        }
    },

    "sizing": {
        "xs": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-xs" },
            "strokeWidth": { "value": 1.5, "unit": "px" }
        },
        "sm": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" },
            "strokeWidth": { "value": 1.67, "unit": "px" }
        },
        "md": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" },
            "strokeWidth": { "value": 2, "unit": "px" }
        },
        "lg": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-lg" },
            "strokeWidth": { "value": 2, "unit": "px" }
        },
        "xl": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-xl" },
            "strokeWidth": { "value": 2, "unit": "px" }
        },
        "2xl": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-2xl" },
            "strokeWidth": { "value": 2, "unit": "px" }
        }
    },

    "tokens": {
        "default": {
            "color": "currentColor"
        }
    },

    "iconLibrary": {
        "source": "Untitled UI Icons",
        "categories": [
            "arrows",
            "alerts",
            "charts",
            "communication",
            "development",
            "editor",
            "education",
            "files",
            "finance",
            "general",
            "layout",
            "maps",
            "media",
            "security",
            "shapes",
            "time",
            "users",
            "weather"
        ],
        "format": "SVG",
        "style": "stroke-based"
    },

    "accessibility": {
        "role": "img",
        "ariaAttributes": {
            "aria-hidden": "true when decorative",
            "aria-label": "descriptive text when meaningful"
        },
        "notes": "Set aria-hidden='true' for decorative icons, provide aria-label for meaningful icons"
    }
}
