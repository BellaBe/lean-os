{
    "meta": {
        "name": "Button",
        "description": "Primary button component with multiple hierarchies and sizes",
        "category": "atom",
        "figmaId": "3287:427074",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "variants": {
        "size": ["sm", "md", "lg", "xl", "2xl"],
        "hierarchy": [
            "primary",
            "secondary-color",
            "secondary-gray",
            "tertiary-color",
            "tertiary-gray",
            "link-color",
            "link-gray"
        ],
        "icon": ["default", "dot-leading", "icon-only"],
        "state": ["default", "hover", "focused", "disabled"]
    },

    "props": {
        "children": {
            "type": "string",
            "required": true,
            "description": "Button label text"
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md", "lg", "xl", "2xl"]
        },
        "hierarchy": {
            "type": "enum",
            "default": "primary",
            "options": ["primary", "secondary-color", "secondary-gray", "tertiary-color", "tertiary-gray", "link-color", "link-gray"]
        },
        "disabled": {
            "type": "boolean",
            "default": false
        },
        "leadingIcon": {
            "type": "string",
            "description": "Icon name for leading position"
        },
        "trailingIcon": {
            "type": "string",
            "description": "Icon name for trailing position"
        }
    },

    "sizing": {
        "sm": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Button/height-sm" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "md": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Button/height-md" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "lg": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Button/height-lg" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-2xl" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "xl": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Button/height-xl" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-2xl" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" }
        },
        "2xl": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Button/height-2xl" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text lg/Semibold" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-md" }
        }
    },

    "tokens": {
        "primary": {
            "default": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" },
                "border": "none"
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid_hover" }
            },
            "focused": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" },
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "disabled": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-disabled" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            }
        },
        "secondary-color": {
            "default": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-secondary" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-primary" }
            },
            "focused": {
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "disabled": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-disabled" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-disabled" }
            }
        },
        "secondary-gray": {
            "default": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-primary" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
            },
            "focused": {
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "disabled": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-disabled" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-disabled" }
            }
        },
        "tertiary-color": {
            "default": {
                "background": "transparent",
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-primary" }
            },
            "focused": {
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "disabled": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            }
        },
        "tertiary-gray": {
            "default": {
                "background": "transparent",
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
            },
            "focused": {
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "disabled": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            }
        },
        "link-color": {
            "default": {
                "background": "transparent",
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
            },
            "hover": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-tertiary (600)" }
            },
            "disabled": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            }
        },
        "link-gray": {
            "default": {
                "background": "transparent",
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
            },
            "hover": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
            },
            "disabled": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            }
        }
    },

    "cssVariables": {
        "--button-bg": "var(--color-bg-brand-solid)",
        "--button-text": "var(--color-text-white)",
        "--button-border-radius": "var(--radius-md)",
        "--button-focus-ring": "var(--effect-focus-ring)",
        "--button-transition": "all 150ms ease-in-out"
    },

    "accessibility": {
        "role": "button",
        "focusable": true,
        "keyboardInteraction": {
            "Enter": "activate",
            "Space": "activate"
        },
        "ariaAttributes": {
            "aria-disabled": "when disabled prop is true"
        }
    }
}
