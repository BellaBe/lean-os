{
    "meta": {
        "name": "Select",
        "description": "Form select input with dropdown menu for option selection",
        "category": "atom",
        "figmaId": "3281:377673",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "variants": {
        "type": ["default", "icon-leading", "avatar-leading", "dot-leading", "search", "tags"],
        "state": ["default", "placeholder", "focused", "open", "disabled", "error"],
        "size": ["sm", "md"]
    },

    "props": {
        "value": {
            "type": "string | string[]",
            "description": "Selected value(s)"
        },
        "options": {
            "type": "array",
            "required": true,
            "description": "Array of {value, label, icon?, avatar?, dot?, disabled?}"
        },
        "placeholder": {
            "type": "string",
            "default": "Select...",
            "description": "Placeholder text when no selection"
        },
        "type": {
            "type": "enum",
            "default": "default",
            "options": ["default", "icon-leading", "avatar-leading", "dot-leading", "search", "tags"]
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "multiple": {
            "type": "boolean",
            "default": false,
            "description": "Allow multiple selections"
        },
        "searchable": {
            "type": "boolean",
            "default": false,
            "description": "Enable search filtering"
        },
        "disabled": {
            "type": "boolean",
            "default": false
        },
        "error": {
            "type": "boolean",
            "default": false
        },
        "onChange": {
            "type": "function",
            "description": "Callback when selection changes"
        }
    },

    "sizing": {
        "sm": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Input/height-sm" },
            "padding": { "value": "8px 12px" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" }
        },
        "md": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Input/height-md" },
            "padding": { "value": "10px 14px" },
            "iconSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-sm" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" }
        },
        "menu": {
            "padding": { "value": "4px 0px" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-md" },
            "maxHeight": { "value": 320, "unit": "px" }
        },
        "menuItem": {
            "paddingOuter": { "value": "1px 6px" },
            "paddingContent": { "value": "10px 10px 10px 8px" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-md" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-sm" }
        },
        "avatar": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-xs" }
        },
        "dot": {
            "size": { "value": 10, "unit": "px" }
        }
    },

    "tokens": {
        "trigger": {
            "default": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-primary" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" },
                "placeholder": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-placeholder" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
            },
            "focused": {
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" },
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring" }
            },
            "error": {
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-error" },
                "ring": { "isAlias": true, "collection": "Effect Styles", "name": "Focus rings/focus-ring-error" }
            },
            "disabled": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-disabled_subtle" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            }
        },
        "menu": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        },
        "menuItem": {
            "default": {
                "background": "transparent",
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" },
                "supportingText": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" },
                "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-quaternary (500)" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" }
            },
            "selected": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" },
                "checkIcon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" }
            },
            "disabled": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            }
        }
    },

    "textStyles": {
        "value": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "placeholder": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-placeholder" }
        },
        "menuItem": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Medium" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "supportingText": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "icons": {
        "chevron": "chevron-down",
        "check": "check",
        "search": "search-sm"
    },

    "accessibility": {
        "role": "combobox",
        "focusable": true,
        "keyboardInteraction": {
            "Enter": "open menu / select option",
            "Space": "open menu / select option",
            "Escape": "close menu",
            "ArrowDown": "open menu / next option",
            "ArrowUp": "previous option",
            "Home": "first option",
            "End": "last option",
            "Type": "jump to matching option"
        },
        "ariaAttributes": {
            "aria-expanded": "menu open state",
            "aria-haspopup": "listbox",
            "aria-activedescendant": "focused option id",
            "aria-disabled": "when disabled"
        }
    }
}
