{
    "meta": {
        "name": "Footer",
        "description": "Marketing website footer with navigation, social links, and legal information",
        "category": "organism",
        "figmaId": "1517:334473",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Input", "Icon", "Link"],
        "molecules": ["FooterLinksColumn", "FooterLink"]
    },

    "variants": {
        "type": ["large", "small"],
        "theme": ["default", "brand"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "large",
            "options": ["large", "small"]
        },
        "theme": {
            "type": "enum",
            "default": "default",
            "options": ["default", "brand"]
        },
        "logo": {
            "type": "string",
            "description": "Logo image source"
        },
        "tagline": {
            "type": "string",
            "description": "Company tagline or description"
        },
        "linkColumns": {
            "type": "array",
            "description": "Array of {heading, links[]} for navigation columns"
        },
        "newsletter": {
            "type": "object",
            "properties": {
                "heading": { "type": "string" },
                "description": { "type": "string" },
                "placeholder": { "type": "string" },
                "buttonLabel": { "type": "string" }
            }
        },
        "socialLinks": {
            "type": "array",
            "description": "Array of {platform, href, icon}"
        },
        "appStoreLinks": {
            "type": "object",
            "properties": {
                "appStore": { "type": "string" },
                "googlePlay": { "type": "string" }
            }
        },
        "copyright": {
            "type": "string",
            "description": "Copyright notice"
        },
        "legalLinks": {
            "type": "array",
            "description": "Array of {label, href} for legal/policy links"
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
            "paddingX": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-desktop" },
            "paddingXMobile": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-mobile" }
        },
        "large": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-7xl" },
            "columnGap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" },
            "sectionGap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-6xl" }
        },
        "small": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-6xl" }
        },
        "bottom": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
        },
        "logo": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-sm" }
        },
        "socialIcon": {
            "size": { "isAlias": true, "collection": "Sizing Styles", "name": "Icon/size-lg" }
        }
    },

    "tokens": {
        "default": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "brand": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-section" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-primary" }
        }
    },

    "textStyles": {
        "tagline": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "default": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
            },
            "brand": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary_on-brand" }
            }
        },
        "copyright": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "default": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-quaternary (500)" }
            },
            "brand": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-quaternary_on-brand" }
            }
        },
        "newsletterHeading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Stacked columns, centered content",
            "breakpoint": "< 768px"
        },
        "desktop": {
            "description": "Multi-column layout",
            "breakpoint": ">= 768px"
        }
    },

    "accessibility": {
        "role": "contentinfo",
        "notes": [
            "Footer should use landmark role contentinfo",
            "Navigation sections should be properly labeled",
            "Social links should have accessible names",
            "Newsletter form should have proper labels"
        ]
    }
}
