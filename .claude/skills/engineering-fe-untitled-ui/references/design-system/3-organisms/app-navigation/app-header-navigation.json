{
    "meta": {
        "name": "AppHeaderNavigation",
        "description": "Application top header navigation bar with navigation, search, and user menu",
        "category": "organism",
        "figmaId": "1207:1678",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Avatar", "Icon", "Input", "Badge"],
        "molecules": ["AppNavItem", "AppNavItemDropdown"]
    },

    "variants": {
        "type": ["simple", "with-tabs", "with-search", "full"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "simple",
            "options": ["simple", "with-tabs", "with-search", "full"]
        },
        "logo": {
            "type": "string"
        },
        "navItems": {
            "type": "array",
            "description": "Primary navigation items"
        },
        "tabs": {
            "type": "array",
            "description": "Tab items for with-tabs variant"
        },
        "showSearch": {
            "type": "boolean",
            "default": false
        },
        "searchPlaceholder": {
            "type": "string",
            "default": "Search..."
        },
        "notifications": {
            "type": "object",
            "properties": {
                "count": { "type": "number" },
                "onClick": { "type": "function" }
            }
        },
        "user": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "email": { "type": "string" },
                "avatar": { "type": "string" }
            }
        },
        "onMenuToggle": {
            "type": "function",
            "description": "Mobile menu toggle handler"
        }
    },

    "sizing": {
        "height": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-8xl" },
        "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "paddingXMobile": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
        "logoHeight": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-sm" },
        "avatarSize": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-md" },
        "searchWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xxs" }
    },

    "tokens": {
        "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
        "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
        "notificationBadge": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-error-solid" },
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
        }
    },

    "textStyles": {
        "navItem": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "default": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" },
            "active": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Hamburger menu, search hidden",
            "breakpoint": "< 768px"
        },
        "desktop": {
            "description": "Full horizontal navigation",
            "breakpoint": ">= 768px"
        }
    },

    "accessibility": {
        "role": "banner",
        "ariaAttributes": {
            "aria-label": "Application header"
        },
        "notes": [
            "Notification count should be announced",
            "User menu should be keyboard accessible",
            "Mobile menu should trap focus when open"
        ]
    }
}
