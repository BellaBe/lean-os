{
    "meta": {
        "name": "HeaderSection",
        "description": "Page header section with title, subtitle, and optional actions for marketing pages",
        "category": "organism",
        "figmaId": "1322:1923",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Input", "Badge"],
        "molecules": ["ButtonGroup"]
    },

    "variants": {
        "alignment": ["center", "left", "space-between"],
        "actions": ["none", "buttons", "tabs", "email-capture", "search-bar"],
        "color": ["default", "brand"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "eyebrow": {
            "type": "string",
            "description": "Small text above the heading (often a badge or category)"
        },
        "heading": {
            "type": "string",
            "required": true,
            "description": "Main heading text"
        },
        "subheading": {
            "type": "string",
            "description": "Supporting description text"
        },
        "alignment": {
            "type": "enum",
            "default": "center",
            "options": ["center", "left", "space-between"]
        },
        "actions": {
            "type": "enum",
            "default": "buttons",
            "options": ["none", "buttons", "tabs", "email-capture", "search-bar"]
        },
        "color": {
            "type": "enum",
            "default": "default",
            "options": ["default", "brand"]
        },
        "primaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "secondaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        },
        "tabs": {
            "type": "array",
            "description": "Tab items for tabs action variant"
        },
        "searchPlaceholder": {
            "type": "string",
            "default": "Search..."
        },
        "emailPlaceholder": {
            "type": "string",
            "default": "Enter your email"
        },
        "emailButtonLabel": {
            "type": "string",
            "default": "Subscribe"
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
            "paddingX": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-desktop" },
            "paddingXMobile": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-mobile" },
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-9xl" },
            "paddingYMobile": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-7xl" }
        },
        "content": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "actions": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" },
            "marginTop": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
        }
    },

    "tokens": {
        "default": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" }
        },
        "brand": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-section" }
        }
    },

    "textStyles": {
        "eyebrow": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
        },
        "heading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display md/Semibold" },
            "typographyMobile": { "isAlias": true, "collection": "Typography Styles", "name": "Display sm/Semibold" },
            "default": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
            },
            "brand": {
                "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
            }
        },
        "subheading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xl/Regular" },
            "typographyMobile": { "isAlias": true, "collection": "Typography Styles", "name": "Text lg/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Stacked layout with reduced padding and text sizes",
            "breakpoint": "< 768px"
        },
        "desktop": {
            "description": "Full layout with maximum content width",
            "breakpoint": ">= 768px"
        }
    },

    "accessibility": {
        "notes": [
            "Heading should use appropriate h1-h6 level based on page structure",
            "Search input should have proper label",
            "Tab navigation should be keyboard accessible"
        ]
    }
}
