{
    "meta": {
        "name": "Table",
        "description": "Data table with sorting, selection, and pagination",
        "category": "organism",
        "figmaId": "1227:110587",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Checkbox", "Button", "Icon"],
        "molecules": ["TableCell", "TableHeaderCell", "Pagination"]
    },

    "variants": {
        "type": ["simple", "with-checkbox", "with-actions", "full"],
        "size": ["sm", "md"],
        "striped": [false, true],
        "bordered": [false, true]
    },

    "props": {
        "columns": {
            "type": "array",
            "required": true,
            "description": "Column definitions {key, label, sortable?, alignment?, width?}"
        },
        "data": {
            "type": "array",
            "required": true,
            "description": "Row data"
        },
        "selectable": {
            "type": "boolean",
            "default": false
        },
        "selectedRows": {
            "type": "array",
            "description": "Selected row IDs"
        },
        "sortBy": {
            "type": "string"
        },
        "sortDirection": {
            "type": "enum",
            "options": ["asc", "desc"]
        },
        "striped": {
            "type": "boolean",
            "default": false
        },
        "bordered": {
            "type": "boolean",
            "default": true
        },
        "pagination": {
            "type": "object",
            "properties": {
                "page": { "type": "number" },
                "pageSize": { "type": "number" },
                "total": { "type": "number" }
            }
        },
        "onSort": {
            "type": "function"
        },
        "onSelect": {
            "type": "function"
        },
        "onPageChange": {
            "type": "function"
        },
        "onRowClick": {
            "type": "function"
        }
    },

    "sizing": {
        "sm": {
            "cellPaddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" },
            "cellPaddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
        },
        "md": {
            "cellPaddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" },
            "cellPaddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
    },

    "tokens": {
        "container": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-xs" }
        },
        "header": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" }
        },
        "row": {
            "default": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "hover": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" },
            "selected": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-primary" },
            "striped": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" }
        },
        "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Horizontal scroll or card layout",
            "breakpoint": "< 768px"
        },
        "desktop": {
            "description": "Full table layout",
            "breakpoint": ">= 768px"
        }
    },

    "accessibility": {
        "role": "table",
        "ariaAttributes": {
            "aria-label": "Table description",
            "aria-rowcount": "total row count",
            "aria-colcount": "column count"
        },
        "keyboardInteraction": {
            "Tab": "move through interactive elements",
            "ArrowUp": "previous row",
            "ArrowDown": "next row",
            "Space": "select row"
        },
        "notes": [
            "Use proper table semantics",
            "Announce sort changes",
            "Selection changes should be announced"
        ]
    }
}
