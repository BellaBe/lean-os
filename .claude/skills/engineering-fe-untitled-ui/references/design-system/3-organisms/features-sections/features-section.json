{
    "meta": {
        "name": "FeaturesSection",
        "description": "Marketing page section showcasing product features with various layouts",
        "category": "organism",
        "figmaId": "1344:104",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Icon", "Badge"],
        "molecules": ["FeatureText", "FeatureTab"]
    },

    "variants": {
        "type": [
            "alternating-layout", "center-mockup", "icon-cards",
            "icons-and-image", "split-layout", "tabbed-features",
            "stacked-cards", "grid-layout"
        ],
        "theme": ["default", "brand"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "icon-cards",
            "options": [
                "alternating-layout", "center-mockup", "icon-cards",
                "icons-and-image", "split-layout", "tabbed-features",
                "stacked-cards", "grid-layout"
            ]
        },
        "theme": {
            "type": "enum",
            "default": "default",
            "options": ["default", "brand"]
        },
        "eyebrow": {
            "type": "string",
            "description": "Section label/badge"
        },
        "heading": {
            "type": "string",
            "required": true
        },
        "subheading": {
            "type": "string"
        },
        "features": {
            "type": "array",
            "required": true,
            "description": "Array of {icon, heading, description, image?}"
        },
        "mediaSrc": {
            "type": "string",
            "description": "Image/mockup source for layout types with media"
        },
        "mediaAlt": {
            "type": "string"
        },
        "primaryAction": {
            "type": "object",
            "properties": {
                "label": { "type": "string" },
                "onClick": { "type": "function" }
            }
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
            "paddingX": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-desktop" },
            "paddingXMobile": { "isAlias": true, "collection": "Container Styles", "name": "container-padding-mobile" }
        },
        "section": {
            "paddingY": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-9xl" },
            "paddingYMobile": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-7xl" }
        },
        "header": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-xl" },
            "marginBottom": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-6xl" },
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "grid": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" },
            "columnGap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
        },
        "alternating": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-9xl" }
        }
    },

    "tokens": {
        "default": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" }
        },
        "brand": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-section" }
        }
    },

    "textStyles": {
        "eyebrow": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-brand-secondary (700)" }
        },
        "heading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display md/Semibold" },
            "typographyMobile": { "isAlias": true, "collection": "Typography Styles", "name": "Display sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "subheading": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xl/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Single column, stacked layout",
            "breakpoint": "< 768px"
        },
        "tablet": {
            "description": "2-column grid for cards",
            "breakpoint": "768px - 1023px"
        },
        "desktop": {
            "description": "Full multi-column layout",
            "breakpoint": ">= 1024px"
        }
    },

    "accessibility": {
        "notes": [
            "Section heading should use appropriate level",
            "Feature icons should be decorative",
            "Tabbed features should use proper tablist/tab/tabpanel pattern",
            "Images should have descriptive alt text"
        ]
    }
}
