{
    "meta": {
        "name": "DatePicker",
        "description": "Date selection component with calendar dropdown",
        "category": "organism",
        "figmaId": "1283:140345",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Icon"],
        "molecules": ["InputField"]
    },

    "variants": {
        "type": ["single", "range"],
        "size": ["sm", "md"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "single",
            "options": ["single", "range"]
        },
        "value": {
            "type": "object",
            "description": "Date or {start, end} for range"
        },
        "size": {
            "type": "enum",
            "default": "md",
            "options": ["sm", "md"]
        },
        "placeholder": {
            "type": "string",
            "default": "Select date"
        },
        "minDate": {
            "type": "string"
        },
        "maxDate": {
            "type": "string"
        },
        "disabledDates": {
            "type": "array"
        },
        "format": {
            "type": "string",
            "default": "MMM d, yyyy"
        },
        "disabled": {
            "type": "boolean",
            "default": false
        },
        "error": {
            "type": "string"
        },
        "onChange": {
            "type": "function"
        }
    },

    "sizing": {
        "calendar": {
            "width": { "isAlias": true, "collection": "Width Styles", "name": "width-xs" },
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xl" }
        },
        "dayCell": {
            "size": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-5xl" }
        },
        "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-xs" },
        "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-lg" }
    },

    "tokens": {
        "dropdown": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        },
        "header": {
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "day": {
            "default": {
                "background": null,
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-secondary (700)" }
            },
            "hover": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-secondary" }
            },
            "selected": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-solid" },
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-white" }
            },
            "today": {
                "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-brand" }
            },
            "range": {
                "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-brand-secondary" }
            },
            "disabled": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-disabled" }
            },
            "outsideMonth": {
                "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-quaternary (500)" }
            }
        },
        "weekday": {
            "text": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "textStyles": {
        "monthYear": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Semibold" }
        },
        "weekday": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text xs/Medium" }
        },
        "day": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text sm/Regular" }
        }
    },

    "animation": {
        "dropdown": {
            "enter": "scale-in",
            "exit": "scale-out",
            "duration": { "isAlias": true, "collection": "Motion Styles", "name": "duration-fast" }
        }
    },

    "accessibility": {
        "role": "dialog",
        "ariaAttributes": {
            "aria-label": "Date picker",
            "aria-modal": "true"
        },
        "keyboardInteraction": {
            "ArrowLeft": "previous day",
            "ArrowRight": "next day",
            "ArrowUp": "previous week",
            "ArrowDown": "next week",
            "Enter": "select date",
            "Escape": "close picker"
        },
        "notes": [
            "Announce selected date on change",
            "Grid should have proper ARIA labels"
        ]
    }
}
