{
    "meta": {
        "name": "DropdownHeaderNavigation",
        "description": "Complete header navigation with dropdown menus for desktop and mobile",
        "category": "organism",
        "figmaId": "1288:26576",
        "figmaFile": "7NsVWhvg7xLJUvGUyRkgEc",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Badge", "Icon", "Avatar"],
        "molecules": ["NavMenuButton", "NavigationActions", "NavMenuItem", "NavMenuItemDropdown", "DropdownHeaderTrigger", "NavMenuItemCard"]
    },

    "variants": {
        "mobileOpen": [false, true],
        "mobileSubnavOpen": [false, true],
        "type": ["simple", "simple-2col", "simple-2col-footer", "simple-footer", "2col-links-footer", "featured-posts", "featured-card"],
        "breakpoint": ["mobile", "desktop"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "simple-2col",
            "options": ["simple", "simple-2col", "simple-2col-footer", "simple-footer", "2col-links-footer", "featured-posts", "featured-card"]
        },
        "navItems": {
            "type": "array",
            "description": "Navigation items with optional dropdowns"
        },
        "user": {
            "type": "object",
            "description": "Current user for NavigationActions"
        },
        "onSignUp": { "type": "function" },
        "onLogIn": { "type": "function" },
        "onLogOut": { "type": "function" }
    },

    "sizing": {
        "header": {
            "height": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-8xl" },
            "paddingX": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-5xl" },
            "paddingXMobile": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-lg" }
        },
        "logo": {
            "height": { "isAlias": true, "collection": "Sizing Styles", "name": "Avatar/size-sm" }
        },
        "nav": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-2xl" }
        },
        "dropdown": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-2xl" },
            "borderRadius": { "isAlias": true, "collection": "Radius Styles", "name": "radius-2xl" }
        },
        "mobileMenu": {
            "topOffset": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-8xl" }
        }
    },

    "tokens": {
        "header": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "dropdown": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" },
            "shadow": { "isAlias": true, "collection": "Effect Styles", "name": "Shadows/shadow-lg" }
        },
        "footer": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary_hover" },
            "border": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Border/border-secondary" }
        },
        "mobileMenu": {
            "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" }
        }
    },

    "textStyles": {
        "navLink": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        },
        "navLinkHover": {
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        }
    },

    "stateManagement": {
        "local": ["mobileMenuOpen", "activeDropdown", "mobileSubnavOpen"],
        "global": ["user"]
    },

    "responsiveBehavior": {
        "mobile": {
            "description": "Full-screen overlay with accordion dropdowns",
            "breakpoint": "< 1024px"
        },
        "desktop": {
            "description": "Horizontal nav with hover dropdowns",
            "breakpoint": ">= 1024px"
        }
    },

    "accessibility": {
        "role": "navigation",
        "ariaAttributes": {
            "aria-label": "Main navigation"
        },
        "keyboardInteraction": {
            "Tab": "move through nav items",
            "Enter": "open dropdown or navigate",
            "Space": "open dropdown or navigate",
            "Escape": "close dropdown/mobile menu",
            "ArrowDown": "open dropdown, focus first item",
            "ArrowUp": "focus last dropdown item"
        },
        "notes": [
            "Mobile menu should trap focus when open",
            "Dropdowns should announce expanded state",
            "Skip link should be provided",
            "Logo should link to home"
        ]
    }
}
