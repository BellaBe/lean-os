{
    "meta": {
        "name": "ForgotPasswordPage",
        "description": "Password reset request page",
        "category": "layout",
        "figmaId": "1269:1186",
        "figmaFile": "BFATWt2kajie3JJgagoDwr",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Input", "Link", "Icon"]
    },

    "variants": {
        "type": ["simple", "card", "split"],
        "breakpoint": ["desktop", "mobile"]
    },

    "props": {
        "logo": {
            "type": "component"
        },
        "title": {
            "type": "string",
            "default": "Forgot password?"
        },
        "subtitle": {
            "type": "string",
            "default": "No worries, we'll send you reset instructions."
        },
        "backToLoginLink": {
            "type": "string",
            "default": "/login"
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-sm" },
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
        }
    },

    "tokens": {
        "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" },
        "icon": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Foreground/fg-brand-primary (600)" }
    },

    "textStyles": {
        "title": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "subtitle": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "formFields": {
        "email": {
            "label": "Email",
            "type": "email",
            "placeholder": "Enter your email",
            "required": true
        }
    },

    "accessibility": {
        "role": "main",
        "ariaLabel": "Password reset form"
    }
}
