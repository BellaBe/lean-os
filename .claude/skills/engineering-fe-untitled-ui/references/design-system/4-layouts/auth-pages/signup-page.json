{
    "meta": {
        "name": "SignupPage",
        "description": "Sign up page layouts for user registration",
        "category": "layout",
        "figmaId": "1277:1029",
        "figmaFile": "BFATWt2kajie3JJgagoDwr",
        "version": "2.0.0"
    },

    "dependencies": {
        "atoms": ["Button", "Input", "Checkbox", "Link", "Icon"],
        "molecules": ["SocialLoginButtons"],
        "organisms": ["HeaderNavigation"]
    },

    "variants": {
        "type": ["simple", "simple-social-logins", "card", "split-image", "split-quote"],
        "breakpoint": ["desktop", "mobile"]
    },

    "props": {
        "type": {
            "type": "enum",
            "default": "simple",
            "options": ["simple", "simple-social-logins", "card", "split-image", "split-quote"]
        },
        "logo": {
            "type": "component"
        },
        "title": {
            "type": "string",
            "default": "Create an account"
        },
        "subtitle": {
            "type": "string",
            "default": "Start your 30-day free trial."
        },
        "showSocialLogins": {
            "type": "boolean",
            "default": true
        },
        "showTerms": {
            "type": "boolean",
            "default": true
        },
        "loginLink": {
            "type": "string",
            "default": "/login"
        }
    },

    "sizing": {
        "container": {
            "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-md" },
            "padding": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-4xl" }
        },
        "form": {
            "gap": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" }
        }
    },

    "tokens": {
        "background": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Background/bg-primary" }
    },

    "textStyles": {
        "title": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Display sm/Semibold" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-primary (900)" }
        },
        "subtitle": {
            "typography": { "isAlias": true, "collection": "Typography Styles", "name": "Text md/Regular" },
            "color": { "isAlias": true, "collection": "Color Styles", "name": "Colors/Text/text-tertiary (600)" }
        }
    },

    "formFields": {
        "name": {
            "label": "Name",
            "type": "text",
            "placeholder": "Enter your name",
            "required": true
        },
        "email": {
            "label": "Email",
            "type": "email",
            "placeholder": "Enter your email",
            "required": true
        },
        "password": {
            "label": "Password",
            "type": "password",
            "placeholder": "Create a password",
            "required": true,
            "hint": "Must be at least 8 characters."
        }
    },

    "accessibility": {
        "role": "main",
        "ariaLabel": "Sign up form"
    }
}
