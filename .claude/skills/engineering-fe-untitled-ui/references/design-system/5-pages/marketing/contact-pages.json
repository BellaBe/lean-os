{
    "meta": {
        "name": "Contact Pages",
        "description": "Contact and support page composition patterns",
        "category": "page",
        "figmaId": "1622:261464",
        "figmaFile": "BFATWt2kajie3JJgagoDwr",
        "version": "2.0.0"
    },

    "breakpoints": ["desktop", "mobile"],

    "patterns": {
        "contact-01": {
            "name": "Form + Info",
            "description": "Contact form with company info sidebar",
            "sections": [
                { "component": "HeaderNavigation", "variant": "simple" },
                { "component": "PageHeader", "variant": "centered", "content": { "title": "Contact us", "subtitle": "We'd love to hear from you" } },
                { "component": "ContactSection", "variant": "split-form-info" },
                { "component": "LocationsSection", "variant": "map-cards" },
                { "component": "FAQSection", "variant": "compact" },
                { "component": "Footer", "variant": "4-column" }
            ]
        },
        "contact-02": {
            "name": "Department Routing",
            "description": "Multiple contact options by department",
            "sections": [
                { "component": "HeaderNavigation", "variant": "simple" },
                { "component": "PageHeader", "variant": "centered" },
                { "component": "ContactOptionsSection", "variant": "card-grid", "options": ["Sales", "Support", "Press", "Partnerships"] },
                { "component": "ContactSection", "variant": "tabbed-forms" },
                { "component": "SocialLinksSection", "variant": "icon-bar" },
                { "component": "Footer", "variant": "simple" }
            ]
        },
        "contact-03": {
            "name": "Sales Focus",
            "description": "Sales-oriented with booking calendar",
            "sections": [
                { "component": "HeaderNavigation", "variant": "simple" },
                { "component": "HeroHeaderSection", "variant": "split-calendar" },
                { "component": "SocialProofSection", "variant": "customer-logos" },
                { "component": "TestimonialSection", "variant": "single-featured" },
                { "component": "FAQSection", "variant": "sales-objections" },
                { "component": "Footer", "variant": "minimal" }
            ]
        }
    },

    "layout": {
        "maxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-5xl" },
        "sectionSpacing": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-6xl" }
    },

    "formFields": {
        "standard": ["name", "email", "company", "message"],
        "sales": ["name", "email", "company", "company-size", "use-case", "timeline"],
        "support": ["name", "email", "subject", "priority", "description"]
    },

    "usage": {
        "purpose": "Convert inquiries and provide support access",
        "integrations": ["CRM", "helpdesk", "calendar booking", "live chat"]
    }
}
