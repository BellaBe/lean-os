{
    "meta": {
        "name": "Create Pages",
        "description": "Creation flow and wizard page composition patterns",
        "category": "page",
        "figmaId": "6277:291692",
        "figmaFile": "BFATWt2kajie3JJgagoDwr",
        "version": "2.0.0"
    },

    "breakpoints": ["desktop", "tablet", "mobile"],

    "patterns": {
        "create-simple": {
            "name": "Simple Create Form",
            "description": "Single-page creation form",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "standard" },
                { "component": "AppHeaderNavigation", "variant": "minimal" },
                { "component": "PageHeader", "variant": "create-header", "content": { "title": "Create new..." } },
                { "component": "FormSection", "variant": "card-sections" },
                { "component": "FormActions", "variant": "sticky-footer", "actions": ["cancel", "create"] }
            ]
        },
        "create-wizard": {
            "name": "Multi-Step Wizard",
            "description": "Step-by-step creation flow",
            "layout": "centered",
            "sections": [
                { "component": "WizardHeader", "variant": "with-progress" },
                { "component": "ProgressSteps", "variant": "horizontal-numbered" },
                { "component": "WizardContent", "variant": "card-centered" },
                { "component": "WizardActions", "variant": "back-next" }
            ]
        },
        "create-modal": {
            "name": "Modal Create",
            "description": "Creation form in modal overlay",
            "layout": "modal",
            "sections": [
                { "component": "Modal", "variant": "large" },
                { "component": "ModalHeader", "variant": "with-close" },
                { "component": "FormSection", "variant": "compact" },
                { "component": "ModalFooter", "variant": "actions-right" }
            ]
        },
        "create-slideout": {
            "name": "Slideout Create",
            "description": "Creation form in slideout panel",
            "layout": "slideout",
            "sections": [
                { "component": "SlideoutMenu", "variant": "right" },
                { "component": "SlideoutHeader", "variant": "with-close" },
                { "component": "FormSection", "variant": "full-height" },
                { "component": "SlideoutFooter", "variant": "sticky-actions" }
            ]
        },
        "onboarding-wizard": {
            "name": "Onboarding Flow",
            "description": "New user onboarding wizard",
            "layout": "fullscreen",
            "sections": [
                { "component": "OnboardingHeader", "variant": "logo-progress" },
                { "component": "ProgressSteps", "variant": "dot-indicators" },
                { "component": "OnboardingContent", "variant": "centered-card" },
                { "component": "OnboardingActions", "variant": "skip-continue" }
            ]
        }
    },

    "layout": {
        "formMaxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-2xl" },
        "wizardMaxWidth": { "isAlias": true, "collection": "Width Styles", "name": "width-3xl" },
        "sectionSpacing": { "isAlias": true, "collection": "Spacing Styles", "name": "spacing-3xl" }
    },

    "wizardSteps": {
        "example": [
            { "step": 1, "title": "Basic Info", "description": "Name and description" },
            { "step": 2, "title": "Configuration", "description": "Settings and options" },
            { "step": 3, "title": "Team", "description": "Invite team members" },
            { "step": 4, "title": "Review", "description": "Confirm and create" }
        ]
    },

    "formSections": {
        "patterns": ["single-column", "two-column", "card-groups"],
        "validation": ["inline", "on-submit", "real-time"],
        "autosave": ["draft", "local-storage", "server-sync"]
    },

    "usage": {
        "purpose": "Create new records with guided experience",
        "progressSave": "Save progress for multi-step flows",
        "successState": "Confirmation with next actions"
    }
}
