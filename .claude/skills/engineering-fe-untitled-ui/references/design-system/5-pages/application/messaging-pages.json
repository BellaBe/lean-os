{
    "meta": {
        "name": "Messaging Pages",
        "description": "Chat and messaging page composition patterns",
        "category": "page",
        "figmaId": "1251:12271",
        "figmaFile": "BFATWt2kajie3JJgagoDwr",
        "version": "2.0.0"
    },

    "breakpoints": ["desktop", "tablet", "mobile"],

    "patterns": {
        "inbox-01": {
            "name": "Email Inbox",
            "description": "Email-style inbox with preview pane",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "with-folders" },
                { "component": "AppHeaderNavigation", "variant": "with-search" },
                { "component": "InboxToolbar", "variant": "with-filters" },
                { "component": "SplitView", "variant": "list-preview" },
                { "component": "MessageList", "variant": "with-checkboxes" },
                { "component": "MessagePreview", "variant": "with-actions" }
            ]
        },
        "chat-01": {
            "name": "Chat Interface",
            "description": "Real-time chat with conversation list",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "collapsed" },
                { "component": "ConversationList", "variant": "with-search" },
                { "component": "ChatHeader", "variant": "with-participant-info" },
                { "component": "ChatMessages", "variant": "grouped-by-date" },
                { "component": "ChatInput", "variant": "with-attachments" }
            ]
        },
        "chat-02": {
            "name": "Support Chat",
            "description": "Customer support chat interface",
            "layout": "split",
            "sections": [
                { "component": "TicketList", "variant": "with-status" },
                { "component": "ChatHeader", "variant": "with-customer-info" },
                { "component": "ChatMessages", "variant": "with-internal-notes" },
                { "component": "ChatInput", "variant": "with-canned-responses" },
                { "component": "CustomerSidebar", "variant": "contact-history" }
            ]
        },
        "notifications-center": {
            "name": "Notifications Center",
            "description": "All notifications in one place",
            "layout": "sidebar-left",
            "sections": [
                { "component": "SidebarNavigation", "variant": "standard" },
                { "component": "AppHeaderNavigation", "variant": "minimal" },
                { "component": "PageHeader", "variant": "with-mark-all-read" },
                { "component": "NotificationFilters", "variant": "tabs" },
                { "component": "NotificationList", "variant": "grouped-by-date" },
                { "component": "Pagination", "variant": "load-more" }
            ]
        }
    },

    "layout": {
        "conversationListWidth": "320px",
        "messageMaxWidth": "70%",
        "inputHeight": "auto"
    },

    "messageTypes": [
        { "type": "text", "features": ["markdown", "mentions", "emoji"] },
        { "type": "file", "features": ["preview", "download"] },
        { "type": "image", "features": ["lightbox", "gallery"] },
        { "type": "system", "features": ["status-update", "timestamp"] }
    ],

    "usage": {
        "purpose": "Real-time communication and notifications",
        "features": ["typing-indicators", "read-receipts", "reactions", "threads"],
        "realtime": ["websockets", "polling", "push-notifications"]
    }
}
